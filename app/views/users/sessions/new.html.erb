<div class="container">
    <%= render "users/shared/error_messages" %>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <br/>
    <div class="row">
        <div class="card">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1">ログイン画面</h4>
                <hr>
                <p class="text-success text-center">下記の項目を入力してください。</p>
                <div class="form-row">
                    <br/>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="form-field">
                              <i class="fas fa-envelope-square"></i><%= f.label :email %><br />
                              <span class="badge badge-danger">必須</span><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Eメールを入力してください。" %>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <div class="input-group">
                              <div class="form-field">
                                 <i class="fa fa-lock"></i><%= f.label :password %>
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> 文字以上)</em>
                                <% end %><br />
                                <span class="badge badge-danger">必須</span><%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください。" %>
                                <% if devise_mapping.rememberable? %>
                                    <div class="field">
                                      <%= f.check_box :remember_me %>
                                      <%= f.label :remember_me %>
                                    </div>
                                <% end %>
                                <%= render "users/shared/links" %>
                              </div>
                        </div>
                    </div>
                    <br/>
                    <div class="actions">
                      <%= f.submit "ログイン", class: "btn btn-primary"%>
                    </div>
                </div>
                <% end %>
            </article>
        </div>
    </div>
</div>

