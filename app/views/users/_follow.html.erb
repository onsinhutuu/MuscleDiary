<a class="icon"><i class="fas fa-user-circle"></i><%=link_to "フォロー#{ muscle.user.followings.count }", follows_user_path(muscle.user.id), remote: true %></a>
<a class="icon"><i class="fas fa-users"></i><%=link_to "フォロワー#{ muscle.user.followers.count }", followers_user_path(muscle.user.id), remote: true %></a>
<% if current_user != muscle.user %>
    <% if muscle.user.followed_by?(current_user) %>
        <a class="icon"><%=link_to "フォローを外す", user_relationships_path(muscle.user.id), method: :delete, remote: true %></a>
    <% else %>
        <a class="icon"><%=link_to "フォローする", user_relationships_path(muscle.user.id), method: :post, remote: true %></a>
    <% end %>
<% end %>