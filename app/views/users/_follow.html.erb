<p><%=link_to "フォロー#{ muscle.user.followings.count }", follows_user_path(muscle.user.id), class: "btn btn-light", remote: true %>
<p><%=link_to "フォロワー#{ muscle.user.followers.count }", followers_user_path(muscle.user.id), class: "btn btn-light", remote: true %>
<% if current_user != muscle.user %>
    <% if muscle.user.followed_by?(current_user) %>
        <p><%=link_to "フォローを外す", user_relationships_path(muscle.user.id), method: :delete,  class: "btn btn-primary", remote: true %></p>
    <% else %>
        <p><%=link_to "フォローする", user_relationships_path(muscle.user.id), method: :post, class: "btn btn-primary", remote: true %></p>
    <% end %>
<% end %>