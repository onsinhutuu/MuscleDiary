<a class="icon"><i class="fas fa-user-circle"></i><%= link_to "フォロー#{ user.followings.count }",follows_user_path(user.id) %></a>
<a class="icon"><i class="fas fa-users"></i><%= link_to "フォロワー#{ user.followers.count }", followers_user_path(user.id) %></a>
<div class="row justify-content-center">
<% if !user.belongs_to_current_user?(current_user) %>
	<% if user.followed_by?(current_user) %>
		<a class="icon"><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, :class => "btn btn-danger" %></a>
	<% else %>
		<a class="icon"><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, :class => "btn btn-primary" %></a>
	<% end %>
<% end %>
</div>