<h2 class="row justify-content-center mt-3">マイページ</h2>
<div class="row justify-content-center">
	<div class="col-11 border">
		<div class="row border-bottom">
			<div class="col-md-6 text-center">
				<%= attachment_image_tag @user, :image, fallback: "no_image.jpg", size:'100x100', class: "img-circle" %>
			</div>
			<div class="col-md-6 mt-5 text-center">
				<h4><%= @user.name %></h4>
			</div>
		</div>
		<div class="row border-bottom">
			<% if @user.belongs_to_current_user?(current_user) %>			
					<div class="col-md-6 text-center mt-3">
						<a class="icon"><%= link_to "編集する", edit_user_path(@user) %><i class="fas fa-user-edit"></i></a>
					</div>
					<div class="col-md-6 text-center mt-3">
						<a class="icon"><%= link_to "パスワード変更", edit_user_registration_path(@user) %><i class="fas fa-user-cog"></i></a>
					</div>
			<% end %>
		</div>
		<div class="row justify-content-center my-3 ">
			<div class="user_<%= @user.id %>">
   			<%= render 'users/follow', user: @user %>
    	</div>
    </div>
  </div>
</div>
<% if @user.belongs_to_current_user?(current_user) %>
<%= month_calendar events: @muscles do |date, muscles| %>
	<%= date.day %>
  <% muscles.each do |muscle| %>
  	<%= link_to "#{ muscle.part.name }",muscle_path(muscle.id) %>
  <% end %>
<% end %>
<% end %>
