<div class="container fluid">
  <div class="row  justify-content-center">
    <h2>パスワード変更画面</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="row  justify-content-center">
    <div class="form-field">
      <i class="fa fa-lock"></i><%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <span class="badge badge-danger">必須</span><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください。" %>
    </div>
  </div>
  <div class="row  justify-content-center">
    <div class="form-field">
      <i class="fa fa-lock"></i><%= f.label :password_confirmation %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <span class="badge badge-danger">必須</span><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度パスワードを入力してください。" %>
    </div>
  </div>
  <div class="row  justify-content-center">
    <div class="actions">
      <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>

