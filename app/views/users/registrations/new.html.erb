<div class="container fluid">
  <div class="row  justify-content-center">
    <%= render "users/shared/error_messages" %>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <br/>
  <div class="row justify-content-center">
  <div class="card">
    <article class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">新規ユーザー</h4>
        <hr>
        <p class="text-success text-center">下記の項目を入力してください。</p>

        <div class="row justify-content-center">
          <div class="form-field">
            <i class="far fa-user"></i><%= f.label :name, "名前" %><br />
            <span class="badge badge-danger">必須</span><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力してください。" %>
          </div>
        </div>
        <br/>
        <div class="row justify-content-center">
          <div class="form-field">
            <i class="fas fa-envelope-square"></i><%= f.label :email %><br />
            <span class="badge badge-danger">必須</span><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Eメールを入力してください。" %>
          </div>
        </div>
        <br/>
        <div class="row justify-content-center">
          <div class="form-field">
             <i class="fa fa-lock"></i><%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <span class="badge badge-danger">必須</span><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力してください。" %>
          </div>
        </div>
        <br/>
        <div class="row justify-content-center">
          <div class="form-field">
            <i class="fa fa-lock"></i><%= f.label :password_confirmation %><br />
            <span class="badge badge-danger">必須</span><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度パスワードを入力してください。"%>
          </div>
        </div>
        <div class="row justify-content-center">
          <%= f.submit "新規登録", class: "btn btn-primary"%>
        </div>
    </article>
  </div>
  </div>
  <% end %>
</div>

