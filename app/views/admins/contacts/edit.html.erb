<div class="row  justify-content-center mt-5">
    <h2>お問い合わせ詳細</h2>
</div>
<div class="row  justify-content-center mt-3">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>問い合わせタイトル</th>
        <th>受信日</th>
      </tr>
    </thead>
    <tbody>
      <td><%= @contact.user.name %></td>
      <td><%= @contact.title %></td>
      <td><%= l @contact.created_at, format: :long  %></td>
    </tbody>
  </table>
</div>
<div class="row  justify-content-center mt-5">
  <h3>問い合わせ内容</h3>
</div>
<div class="row  justify-content-center mt-3">
  <%= @contact.body %>
</div>
<%= form_for @contact, url: admins_contact_path do |f| %>
  <div class="row  justify-content-center mt-5">
    <h3>返信</h3>
  </div>
  <div class="row  justify-content-center">
    <%= f.text_field :reply, class:"form-control", placeholder: "返信内容" %>
  </div>
<div class="row  justify-content-center">
    <%= f.submit "送信", class: "btn btn-primary w-25 mt-3" %>
</div>
<% end %>
</div>