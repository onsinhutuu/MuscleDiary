<div class="container">
	<div class="row  justify-content-center">
	<%= form_tag(users_search_path, method: :get) do %>
      	<%= text_field_tag 'search[content]' %>
     	<%= select_tag 'search[model]', options_for_select({ "ユーザー" => "user", "筋トレ（種目）" => "muscle" }) %>
     	<%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
        <%= submit_tag '検索', class: "btn btn-primary" %>
    <% end %>
	</div>
	<div class="row  justify-content-center">
		<h1>ALL WORKOUT</h1>
	</div>
	<% @muscles.each do |muscle| %>
	<div class="row justify-content-center">
		<!-- work_out本体 -->
		<div class="col-8  my-3 border">
			<!-- ヘッダー -->
			<div class="row justify-content-center border-bottom">
				<div class="col-6 pl-0 align-self-center text-left">
					<td>
					<%= link_to user_path(muscle.user_id) do %>
					<%= attachment_image_tag muscle.user, :image, :fill, 70, 70, fallback: "no_image.jpg", size:'70x70', class: "rounded-circle" %>
					<% end %>
					</td>
					<td>
					<%= link_to muscle.user.name, muscle_path(muscle.id) %>
					</td>
				</div>
				<div class="col-4 pl-0 align-self-center text-right">
					<td>
					<%= muscle.created_at.strftime('%Y/%m/%d') %>
					</td>
				</div>
			</div>

			<div class="row">
				<!-- 左半分 -->
				<div class="col-md-6 text-center pt-5">
				<div class="row">
						<!-- タグ -->
						<div class="col mt-2">
							<i class="fas fa-tags"></i><%= render_with_hashtags(muscle.work_tag) %>
						</div>
					</div>
				</div>
				<!-- 右半分 -->
				<div class="col-md-6">
					<div class="row my-2 border-bottom">
						<!-- 筋トレの簡易情報について -->
						<div class="col-10">
							<td>
								種目名:<%= muscle.part.name %>
							</td>
						</div>
						<div class="col-10">
							<td>
								重量:<%= muscle.weight %>kg
							</td>
						</div>
						<div class="col-10">
							<td>
								レップ数:<%= muscle.rep %>rep
							</td>
						</div>
						<div class="col-10">
							<td>
								セット数:<%= muscle.set_count%>set
							</td>
						</div>
					</div>
					<div class="row mt-2">
						<!-- コメント -->
						<div class="col">
							<i class="fas fa-comment"></i>
							<td>
								<%= muscle.muscle_comments.count %>件コメント
							</td>
						</div>
						<!-- いいね -->
						<div class="col">
							<div id="favorite-2">
								<td>
									<p class="muscles_<%= muscle.id %>">
            <%= render 'muscles/favpage', muscle: muscle %>
        	</p>
          </td>
							</div>
						</div>
					</div>
				</div>
				<div class="row my-3 mx-auto">
					<!-- 詳細ページへのボタン -->
					<div class="col-12 text-center">
						<td>
							<%= link_to "詳細", muscle_path(muscle.id) %>
						</td>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<div class="row justify-content-center">
 	<%= paginate @muscles %>
 	</div>
</div>