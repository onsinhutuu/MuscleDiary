<% muscle.muscle_comments.each do |muscle_comment| %>
  <div class="comment-body">
    <div class="comment-avatar">
      <div class="avatar">
       <%= attachment_image_tag muscle.user, :image, :fill, 40, 40, fallback: "no_image.jpg", size:'50x50', class: "img-circle pull-left profile-thumb" %>
      </div>
    </div>
    <div class="comment-text">
      <div class="comment-author clearfix">
       <%= link_to "#{ muscle_comment.user.name }",user_path(muscle_comment.user.id) %>
        <span class="comment-meta">
        <span class="comment-date"><%= muscle_comment.created_at.strftime('%Y/%m/%d') %></span>
        </span>
      </div>
      <div class="comment-entry"><%= muscle_comment.comment %>
      </div>
      <% if @muscle.user == current_user %>
      <%= link_to "コメントを消す", muscle_muscle_comment_path(muscle_comment.muscle, muscle_comment), method: :delete, remote: true %>
      <% end %>
    </div>
  </div>
<% end %>
