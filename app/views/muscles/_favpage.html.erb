<% if muscle.favorited_by?(current_user) %>
    <%= link_to muscle_favorites_path(muscle), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= muscle.favorites.count %>
    <% end %>
<% else %>
    <%= link_to muscle_favorites_path(muscle), method: :post, remote: true do  %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= muscle.favorites.count %>
    <% end %>
<% end %>